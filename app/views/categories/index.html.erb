<h1>Categories</h1>
<p>
<%= link_away '[New Category]', new_category_path %>
<p>

<table class="table table-striped table-bordered ">
  <tr>
    <th>Name</th>
    <th></th>
    
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= best_in_place category, :name %></td>


    <td><%= link_to raw("<i class=\"icon-trash \"> </i>"), category, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


