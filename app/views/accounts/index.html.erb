<% provide(:title, 'Accounts') %>
<div class="center hero-unit">
  <table class="table table-striped table-bordered" >
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>

    <% @accounts.each do |account| %>
      <tbody>
        <tr>
          <td><%= best_in_place account, :name %></td>
          <td><%= best_in_place account, :description %></td>
          <td><%= number_to_currency(account.available_balance) %></td>
          <td><%= number_to_currency(account.final_balance) %></td>

          <td align="center"><%= link_to 'Show', account_transactions_path(account) %>
              <%= link_to 'Edit', account, :action => :show %>
              <%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<br />

<%= link_to 'New Account', new_account_path %>
